{
  "name": "send-email",
  "version": "1.0.0",
  "description": "Command-line tool to send an email, or automate repetitive emails",
  "type": "module",
  "main": "./dist/core/engine.js",
  "types": "./dist/core/engine.d.ts",
  "exports": {
    ".": {
      "import": "./dist/core/engine.js",
      "types": "./dist/core/engine.d.ts"
    },
    "./types": {
      "import": "./dist/core/types.js",
      "types": "./dist/core/types.d.ts"
    }
  },
  "bin": {
    "sendEmail": "./bin/sendEmail.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "compile": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "nodemailer": "^6.9.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "inquirer": "^9.2.0",
    "marked": "^12.0.0",
    "zod": "^3.22.0",
    "@jhauga/getdate": "^1.0.1"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.12.0",
    "@types/nodemailer": "^6.4.14",
    "tsx": "^4.7.2",
    "vitest": "^1.4.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "email",
    "nodemailer",
    "cli",
    "smtp",
    "bulk-email",
    "email-automation"
  ]
}
